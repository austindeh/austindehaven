    <div class="white-bg">
      <div class="copy-width">
        <div class="grid">
          <div class="row observable">
            <div class="column column-centered column-spacing">
              <h1 class="oversize">17%</h1>
              <p class="observable body spacing-small">Growth YoY for Albertsons 4 You loyalty program</p>
            </div>
            <div class="column column-centered">
              <h1 class="oversize">9%</h1>
              <p class="observable body spacing-small">increase in the number of active engaged members</p>
            </div>
            <div class="column column-centered">
              <h1 class="oversize">248%</h1>
              <p class="observable body spacing-small">increase in digital sales on a two-year stack</p>
            </div>
            <div class="column column-centered">
              <h1 class="oversize">93%</h1>
              <p class="observable body spacing-small">retention rate with actively engaged members</p>
            </div>
          </div>
        </div>
      </div>
    </div>

